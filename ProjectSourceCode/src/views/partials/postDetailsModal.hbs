<!-- Modal HTML for Post Details -->
<div class="modal fade" id="postDetailsModal" tabindex="-1" aria-labelledby="postDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="postDetailsModalLabel">Post Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <div class="post-detail-container">
                    <img id="postDetailCover" src="../../resources/img/popcorn.jpeg" alt="Post Cover" class="post-detail-img" style="width: 100%; height: auto; border-radius: 8px; margin-bottom: 10px;">
                    <h5 id="postDetailTitle" class="card-title mb-2"></h5>
                    <p id="postDetailReview" class="card-text mb-1"><strong>Review:</strong> </p>
                    <p id="postDetailDescription" class="card-text mb-1"><strong>Description:</strong> </p>
                    <p id="postDetailWhereToWatch" class="card-text mb-2"><strong>Where to Watch:</strong> </p>
                </div>
            </div>

             <!-- â¤ï¸ Like Button -->
            <button class="btn heart-button" data-post-id="{{id}}" aria-label="Like">
                <i class="bi {{#if liked}}bi-heart-fill{{else}}bi-heart{{/if}}" style="color: white;"></i>
                <span class="like-count ms-1" style="color: white;">{{like_count}}</span>
            </button>

            <!-- âž• Add to Watchlist Button -->
            <form action="/add-to-watchlist" method="POST" class="d-inline">
                <input type="hidden" name="title" value="{{title}}">
                <input type="hidden" name="cover" value="{{cover}}">
                <input type="hidden" name="whereToWatch" value="{{whereToWatch}}">
                <button type="submit" class="btn" aria-label="Add to Watchlist">
                    <i class="bi bi-plus-circle" style="color: white;"></i>
                </button>
            </form>

            <!-- ðŸ’¬ Comment Form -->
            <form action="/api/posts/{{id}}/comment" method="POST" class="comment-form mt-2">
                <input type="text" name="comment" class="form-control comment-input" placeholder="Add a comment..." required>
                <button type="submit" class="btn btn-sm btn-primary">Comment</button>
            </form>
        </div>
    </div>
</div>
