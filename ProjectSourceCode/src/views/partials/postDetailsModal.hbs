<!-- Post Details Modal -->
<div class="modal fade" id="postDetailsModal" tabindex="-1" aria-labelledby="postDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-circle fs-4 me-2 text-secondary"></i>
          <strong class="text-light">@<span id="postUser"></span></strong>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Post Cover Image -->
        <div class="ratio ratio-1x1" style="overflow: hidden;">
          <img src="" alt="Post Cover" id="postDetailCover" class="w-100 h-100" style="object-fit: cover;">
        </div>

        <!-- Post Title & Rating -->
        <h5 class="mt-3" id="postTitle"></h5>
        <p id="ratingValue" class="text-light"></p>

        <!-- Movie Description Preview with Read More link -->
        <p id="movieDescPreview" class="text-light"></p>

        <!-- Review and Where to Watch -->
        <p id="reviewText" class="text-light"><strong>Review:</strong> <span id="ratingValue"></span></p>
        <p id="whereToWatchInput" class="text-light"><strong>Where to Watch:</strong> <span id="whereToWatchInput"></span></p>

        <!-- Like Button -->
        <div class="mt-4">
          <button class="btn heart-button" aria-label="Like">
            <i class="bi bi-heart" style="color: white;"></i>
            <span class="like-count ms-1" style="color: white;">{{like_count}}</span>
          </button>
        </div>

        <!-- Comments Section -->
        <div id="commentsSection">
            {{#each post.comments}}
            <div class="comment">
                <strong>{{this.user}}</strong>: {{this.commentText}}
            </div>
            {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Movie Description Modal -->
<div class="modal fade" id="movieDescriptionModal" tabindex="-1" aria-labelledby="movieDescriptionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <div class="d-flex align-items-center">
          <i class="bi bi-film fs-4 me-2 text-secondary"></i>
          <strong class="text-light" id="modalMovieTitle"></strong>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Movie Poster -->
        <div class="ratio ratio-1x1" style="overflow: hidden;">
          <img src="" alt="Movie Poster" id="modalMovieCover" class="w-100 h-100" style="object-fit: cover;">
        </div>

        <!-- Full Movie Description -->
        <p id="modalMovieDescription" class="text-light mt-3"></p>
      </div>
    </div>
  </div>
</div>

