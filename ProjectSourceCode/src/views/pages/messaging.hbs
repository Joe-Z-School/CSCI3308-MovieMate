<body id="messagePage"> 
    <script src="/socket.io/socket.io.js"></script>
    <script src="../resources/js/messageScript.js"></script>

    <div class="container mt-4">
        <div class="row">
            <!-- Right Sidebar: Friends List -->
            <div class="col-md-4">
                <div class="list-group">
                    {{#each friends}}
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="{{profileIcon}}" alt="{{username}}" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                        <span>{{username}}</span>
                        {{#if unreadCount}}
                        <span class="badge bg-danger ms-auto">{{unreadCount}}</span>
                        {{/if}}
                    </a>
                    {{/each}}
                </div>
            </div>

            <!-- Chatting Section -->
            <div class="col-md-8">
                <div id="chat-container" class="card">
                    <div class="card-body">
                        <div id="message-list" class="overflow-auto" style="height: 300px;">
                            <!--- ***** Messages load here ***** -->
                        </div>
                        <div class="input-group mt-3">
                            <input id="message-input" type="text" class="form-control" placeholder="Type your message">
                            <button id="send-button" class="btn btn-primary">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>