<style>
  body {
    display: block !important;
    justify-content: unset !important;
    padding-top: 70px !important;
  }

  h1 {
    margin-top: 100px;
    color: #e9defa;
    padding-left: 20px;
  }

  .cards-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 20px;
    margin-top: 20px;
  }

  .card {
    background-color: rgb(52, 52, 57);
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(65, 43, 74, 0.1);
    width: 250px;
    padding: 20px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .card img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 15px;
    object-fit: cover;
  }

  .card .name {
    font-size: 1.2em;
    font-weight: bold;
    color: #e9defa;
    margin-bottom: 10px;
  }
</style>

{{> nav}}
<h1 style="color: #e9defa">Following</h1>
<div class="cards-container">
  {{#each following}}
  <div class="card">
    <a href="/profile?id={{id}}" style="text-decoration: none; color: inherit;">
      <img src="../../resources/img/{{this.profile_icon}}" alt="Profile Picture" class="follower-pic">
      <div class="name">{{this.first_name}} {{this.last_name}}</div>
      <p style="color: #735aaa">@{{this.username}}</p>
      <p style="color: #e9defa">{{this.bio}}</p>
    </a>
  </div>
</div>
{{/each}}
</div>