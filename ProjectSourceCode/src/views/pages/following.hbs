<style>
  body {
    display: block !important;
    justify-content: unset !important;
    padding-top: 70px !important;
  }

  h1 {
    margin-top: 40px; /* Reduced for better spacing */
    color: #e9defa;
    padding: 0 20px; /* Added right padding for consistency */
  }

  .cards-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 20px;
    justify-content: center; /* Center cards on larger screens */
  }

  .card {
    background-color: rgb(52, 52, 57);
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(65, 43, 74, 0.1);
    width: 100%; /* Make width flexible */
    max-width: 280px; /* Maximum card width */
    min-width: 220px; /* Minimum card width */
    padding: 20px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    transition: transform 0.3s ease; /* Add hover effect */
  }

  .card:hover {
    transform: translateY(-5px); /* Lift card on hover */
    box-shadow: 0 6px 12px rgba(65, 43, 74, 0.15);
  }

  .card img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 15px;
    object-fit: cover;
    border: 3px solid #735aaa; /* Add border to profile image */
  }

  .card .name {
    font-size: 1.2em;
    font-weight: bold;
    color: #e9defa;
    margin-bottom: 5px; /* Reduced for tighter spacing */
  }

  .card p {
    margin: 5px 0; /* Better paragraph spacing */
    word-break: break-word; /* Prevent long text from overflowing */
  }

  .card a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .cards-container {
      gap: 15px;
      padding: 15px;
    }
    
    .card {
      max-width: calc(50% - 15px); /* Two cards per row on tablets */
    }
  }

  @media (max-width: 480px) {
    .card {
      max-width: 100%; /* Single column on mobile */
    }
  }
</style>

{{> nav}}
<h1>Following</h1>
<div class="cards-container">
  {{#each following}}
    <div class="card">
      <a href="/profile?id={{id}}">
        <img src="../../resources/img/{{this.profile_icon}}" alt="Profile Picture" class="follower-pic">
        <div class="name">{{this.first_name}} {{this.last_name}}</div>
        <p style="color: #735aaa">@{{this.username}}</p>
        <p style="color: #e9defa">{{this.bio}}</p>
      </a>
    </div>
  {{/each}}
</div>