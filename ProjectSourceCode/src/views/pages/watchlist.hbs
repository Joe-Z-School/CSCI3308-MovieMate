<style>
  body {
    display: block !important;
    justify-content: unset !important;
  }

  h1 {
    margin-top: 100px;
    color: #e9defa;
    padding-left: 20px;
  }

.cards-container {
    display: flex; 
    flex-direction: column;
    gap: 20px;
    width: 90%;
    margin-right: auto;
    margin-left: auto;
}

.card {
    background-color: rgb(52, 52, 57);
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(65, 43, 74, 0.1);
    flex: 1;
    min-width: 250px;
    padding: 20px;
    display: grid; 
    grid-template-columns: 120px 1fr auto;
    grid-template-rows: auto auto; 
    gap: 10px; 
    align-items: start; 
}

.card img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 5px;
    grid-row: 1 / 3; 
}

.card .info-bio-container {
    grid-column: 2; 
    display: grid;
    grid-template-columns: max-content 1fr; 
    grid-template-rows: auto auto;
    gap: 5px 10px;
}

.card .name {
    font-size: 1.2em;
    font-weight: bold;
    color: #e9defa;
    grid-column: 1; 
    grid-row: 1;
    margin-bottom: 5px;
}

.card .watch-on-rating {
    grid-column: 1; 
    grid-row: 2;
    display: flex;
    flex-direction: column;
    gap: 5px;
    color: #e9defa;
    font-size: 0.9em;
}

.card .bio {
    color: #e9defa;
    font-size: 0.9em;
    grid-column: 2; 
    grid-row: 1 / 3; 
    text-align: left;
    padding-left: 20px;
}

.card form {
    grid-column: 3; /
    grid-row: 1 / 3; 
    align-self: center; 
}

.card form button {
    padding: 8px 12px;
}
</style>

