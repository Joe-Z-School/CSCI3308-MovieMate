<style>
 body {
    display: block !important; 
    justify-content: unset !important;
  }

  h1 {
    margin-top: 100px;
    color: #e9defa;
    padding-left: 20px;
  }

.cards-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  width: 100%;
  justify-content: space-between;
}

.card {
  background-color: rgb(52, 52, 57);
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(65, 43, 74, 0.1);
  flex: 1; 
  min-width: 250px; 
  padding: 20px;
  text-align: center;
  display: flex;
  flex-direction: row; 
  gap: 20px; 
  justify-content: space-between;
}

.card img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 15px;
}

.card .name {
  font-size: 1.2em;
  font-weight: bold;
  color: #e9defa;
  margin-bottom: 10px;
}

.card p {
  color: #e9defa;
  margin-bottom: 20px; 
}
</style>

{{> nav}}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h1 style="color: #e9defa">My Watchlist</h1>
<div class="cards-container">
  {{!-- {{#each watchlist}} --}}
  <div class="card h-100">
    <img src="../../resources/img/profile_pic_option_1.png" class="card-img-top" alt="{{title}}">
    <div class="name">Sample Title</div>
    <p>Where to watch: Netflix</p>
    <form method="POST" action="/remove-from-watchlist">
      <input type="hidden" name="title" value="{{title}}">
      <button type="submit" class="btn btn-danger">Remove</button>
    </form>
  </div>
  {{!-- {{/each}} --}}
</div>