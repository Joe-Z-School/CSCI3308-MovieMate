<style>
body {
  display: flex;
  height: 100vh;
  margin: 20px;
  background-color: #000000;
  flex-direction: row;
}

.cards-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  width: 100%;
  justify-content: space-between;
}

.card {
  background-color: rgb(52, 52, 57);
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(65, 43, 74, 0.1);
  flex: 1; 
  min-width: 250px; 
  padding: 20px;
  text-align: center;
  display: flex;
  flex-direction: row; 
  gap: 20px; 
  justify-content: space-between;
}

.card img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 15px;
}

.card .name {
  font-size: 1.2em;
  font-weight: bold;
  color: #e9defa;
  margin-bottom: 10px;
}

.card p {
  color: #e9defa;
  margin-bottom: 20px; 
}
</style>

{{> nav}}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h1 style="color: #e9defa">My Watchlist</h1>
<div class="cards-container">
  <div class="card h-100">
    <img src="{{cover}}" class="card-img-top" alt="{{title}}">
    <div class="movie_title">{{title}}</div>
    <p>{{description}}</p>
    <button class="btn add-button" id="add-button-{{@index}}" data-title="{{title}}"
        data-cover="{{cover}}" data-where="{{whereToWatch}}" data-bs-toggle="tooltip"
        data-bs-title="Add to WatchList">
        <i class="bi bi-plus-circle" id="add-icon-{{@index}}"></i>
    </button>
  </div>
</div>